.item-header{
  padding:60rpx 30rpx;
}

.item-header .item-title{
  font-size: 50rpx;
}

.item-header .item-detail{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.item-detail .left-rate{
  flex: 1;
  margin-right: 20rpx;
}
.item-detail .item-sub-rate{
  margin-top: 20rpx;
}

.left-detail .item-rate{
  display:flex;
  justify-content: flex-start;
  align-items: center;
}
.item-rate text{
  margin-left: 20rpx;
  font-size: 18rpx;
  color: gray;
}

.item-detail .left-detail{
  width: 460rpx;
}
.item-detail .right-detail{
  height:240rpx;
  width: 200rpx;
}
.right-detail image{
  width: 100%;
  height: 100%;
}

.item-tags{
  padding: 0 30rpx;
}
.item-tags .item-tags-title{
  color: #b3b3b3;
  font-size: 32rpx;
  margin-bottom: 18rpx;
}
.item-tags .item-tags-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.item-tags-list text{
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  color: #353535;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.more-comment{
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 36rpx;
  color: #41be57;
}
.comment-title{
  margin-top: 40rpx;
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #b3b3b3;
}
