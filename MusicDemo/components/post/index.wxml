
  <view class="post-container" bind:tap="onGoToDetail" data-post-id="{{res.postId}}">
    <view class="post-author-date">
      <image class="post-author" src="{{res.avatar}}"></image>
      <text class="post-date">{{res.date}}</text>
    </view>
    <text class="post-title">{{res.title}}</text>
    <image class="post-image" src="{{res.headImgSrc}}"></image>
    <text class="post-content">{{res.content}}</text>
    <view class="post-like">
      <!-- <image class="post-like-image" src="/images/chat.png"></image> -->
      <l-icon class="post-like-image" name="favor" color="#666" size="28"></l-icon>
      <text class="post-like-font">{{res.collection}}</text>
      <!-- <image class="post-like-image" src="/images/view.png"></image> -->
      <l-icon class="post-like-image" name="eye" color="#666" size="28"></l-icon>
      <text class="post-like-font">{{res.reading}}</text>
    </view>
  </view>