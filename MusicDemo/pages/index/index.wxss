.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个导航图标的样式 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  color: white;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲样式 */
.recommendContainer{
  padding: 20rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color:#666
}
.recommendContainer .header .more{
  float: right;
  color: #666;
  font-size: 26rpx;
  border: 1rpx solid #666;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}