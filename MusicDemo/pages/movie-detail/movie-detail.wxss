.container{
  display: flex;
  flex-direction: column;
}
/* 模糊背景图 */
.head-image{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}
/* 左上悬浮文字区域 */
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
  margin-left: 40rpx;
}
.sub-title{
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font{
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}
/* 右侧悬浮图片 */
.movie-image{
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  right: 30rpx;
  top: 160rpx;
}