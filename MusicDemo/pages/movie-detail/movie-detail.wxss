
.container{
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 模糊背景图 */
.head-image{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}
/* 左上悬浮文字区域 */
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
  margin-left: 40rpx;
}
.sub-title{
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 40rpx;
}
.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font{
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}
/* 中部电影信息模块 */
.summary{
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777777;
}
.origin-title{
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-top: 10rpx;
}
.mark{
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999999;
}
.score-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
/* 右侧悬浮图片 */
.movie-image{
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  right: 30rpx;
  top: 160rpx;
}

/* 第一个分割线 */
.hr{
  width: 100%;
  height: 1rpx;
  background-color: #d6d6d6;
  margin-top: 45rpx;
}

/* 剧情简介模块view */
.synopsis{
  margin-left: 40rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}
.synopsis-font{
  color: #999;
}
.summary-content{
  margin-top: 30rpx;
  margin-right: 40rpx;
  line-height: 38rpx;
  letter-spacing: 1px;
}

/* 影人部分样式 */
.casts{
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 50rpx;
}
.cast-font{
  margin-bottom: 40rpx;
  color: #999;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}
.casts-container{
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
  height: 300rpx;
}
.cast-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

