<view>
  <swiper indicator-dots autoplay>
    <swiper-item>
      <image src="/images/banner-1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/banner-2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/banner-3.jpg"></image>
    </swiper-item>
  </swiper>

  <!-- 文章列表部分 -->
<block wx:for="{{postList}}" wx:key="index">
  <view class="post-container" bind:tap="onGoToDetail" data-post-id="{{item.postId}}">
    <view class="post-author-date">
      <image class="post-author" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-image" src="{{item.headImgSrc}}"></image>
    <text class="post-content">{{item.content}}</text>
    <view class="post-like">
      <!-- <image class="post-like-image" src="/images/chat.png"></image> -->
      <l-icon class="post-like-image" name="favor" color="#666" size="28"></l-icon>
      <text class="post-like-font">{{item.collection}}</text>
      <!-- <image class="post-like-image" src="/images/view.png"></image> -->
      <l-icon class="post-like-image" name="eye" color="#666" size="28"></l-icon>
      <text class="post-like-font">{{item.reading}}</text>
    </view>
  </view>
</block>
</view>