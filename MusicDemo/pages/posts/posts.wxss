/* 文章列表样式 */
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-date{
  margin:10rpx 0 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  /* vertical-align: middle; */
}
.post-date{
  margin-left: 20rpx;
  font-size: 26rpx;
  /* vertical-align: middle; */
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}