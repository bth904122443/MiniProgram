page{
  height: 100%;
}
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.navContainer{
  display: flex;
  flex-direction: row;
  /* margin-top: 20rpx; */
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  color:#d43c33;
}
.navItem text{
  font-size: 26rpx;
}
/* 推荐歌曲样式 */
.recommendContainer{
  padding:20rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #666;
}
.recommendContainer .header .more{
  float: right;
  border: 1px solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

/* scroll-view滚动模块 */
.recommendScroll{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  display: block;  /*设置该元素为块级元素，可以约束换行范围*/
  white-space: nowrap; /*是否换行*/
  overflow: hidden;  /*溢出字段如何处理*/
  text-overflow:ellipsis ; 
  /* 多行文本溢出 */
  /*overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;  /*设置对齐模式*/
  /*-webkit-line-clamp: 2; */ /*设置多行的行数*/
}
