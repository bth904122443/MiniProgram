.post-container{
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #cccccc;
  border-top: 1px solid #cccccc;
}
.author-container{
  width: 100%;
  height: 50rpx;
  display: flex;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}
.author-container image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.author-container text{
  font-size: 26rpx;
  color: #999999;
}
.post-title{
  color: #666;
  font-weight: 900;
  font-size: 32rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 20rpx;
}
.content-container{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #666;
}
.rate-container{
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.rate-container text{
  margin-left: 16rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
}