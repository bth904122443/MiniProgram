/* 轮播图 */
.swiper{
  width: 100%;
  height: 460rpx;
}
.swiper image{
  width: 100%;
  height: 460rpx;
}
/* 文章列表 */
.post-container{
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}
.author-container{
  width: 100%;
  height: 50rpx;
  display: flex;
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  align-items: center;
}
.author-container image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.author-container text{
  font-size: 26rpx;
  color: #999999;
}
.post-title{
  font-size: 32rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.post-image{
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.content-container{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.rate-container{
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
}
.rate-container text{
  margin-left: 16rpx;
  margin-right: 16rpx;
}